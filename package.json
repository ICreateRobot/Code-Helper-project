{
  "name": "code-helper",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "start": "npm run build && electron .",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "electron:serve": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:build": "vite build && electron-builder"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.icreate.helperTools",
    "productName": "Code Helper",
    "asar": false,
    "copyright": "Copyright Â© 2023 ICreate",
    "icon":"dist/img/icon.ico",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "dependencies": {
    "axios": "^1.6.4",
    "fs": "^0.0.1-security",
    "vue": "^3.3.11",
    "vue-clipboard2": "^0.3.3",
    "vue2-smooth-scroll": "^1.6.0",
    "xml-js": "^1.6.11",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^13.0.0",
    "electron-builder": "^24.9.1",
    "electron-devtools-installer": "^3.1.0",
    "vite": "^5.0.10",
    "vite-plugin-optimizer": "^1.4.2",
    "vue-cli-plugin-electron-builder": "~2.1.1",
    "wait-on": "^7.2.0"
  }
}
